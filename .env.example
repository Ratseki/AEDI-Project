# ==================================
# APP & DATABASE
# ==================================
PORT=3000
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# ==================================
# AUTHENTICATION
# ==================================
# Use a strong, random string
JWT_SECRET=supersecretkey

# ==================================
# PAYMENTS (PAYMONGO)
# ==================================
# Set to "live" or "test"
PAYMONGO_MODE=test
PAYMONGO_TEST_SECRET_KEY=sk_test_...
PAYMONGO_LIVE_SECRET_KEY=sk_live_...

# ==================================
# BOOKING & PHOTO LOGIC
# ==================================
# Tax rate as a decimal (e.g., 0.12 for 12%)
BOOKING_TAX_RATE=0.12

# Default download limit for photo purchases
MAX_DOWNLOADS=10